@model IEnumerable<AgriConnect.Models.Product>

@{
    ViewData["Title"] = "My Products";
}

<div class="container mt-5">
    <div class="card shadow border-0 rounded-4">
        <div class="card-header bg-success text-white rounded-top-4">
            <h3 class="mb-0"><i class="bi bi-basket"></i> My Products</h3>
        </div>
        <div class="card-body bg-light p-4">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-success">
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Production Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" alt="Product Image" width="80" class="img-thumbnail" />
                                }
                            </td>
                            <td>@product.Name</td>
                            <td>@product.Description</td>
                            <td>R @product.Price.ToString("0.00")</td>
                            <td>@product.Category</td>
                            <td>@product.ProductionDate.ToString("yyyy-MM-dd")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
