@model AgriConnect.ViewModels.FarmerRegisterViewModel

@{
    ViewData["Title"] = "Register Farmer";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-success text-white rounded-top-4">
                    <h3 class="mb-0"><i class="bi bi-person-plus-fill"></i> Register Farmer</h3>
                </div>
                <div class="card-body bg-light">
                    <form asp-action="FarmerRegister" method="post" class="px-3">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-semibold text-success"></label>
                            <input asp-for="FullName" class="form-control rounded-pill shadow-sm" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold text-success"></label>
                            <input asp-for="Email" class="form-control rounded-pill shadow-sm" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-semibold text-success"></label>
                            <input asp-for="Password" type="password" class="form-control rounded-pill shadow-sm" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold text-success"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control rounded-pill shadow-sm" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Location" class="form-label fw-semibold text-success"></label>
                            <input asp-for="Location" class="form-control rounded-pill shadow-sm" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-warning text-dark fw-bold rounded-pill py-2">
                                <i class="bi bi-check2-circle"></i> Register Farmer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
